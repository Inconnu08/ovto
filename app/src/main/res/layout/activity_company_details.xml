<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="application.taufiqrahman.com.ovotofeed.CompanyDetails">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0dp">

            <ImageView
                android:id="@+id/cardView_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/companybanner"/>

            <ImageView
                android:id="@+id/cardView_heart1"
                android:layout_width="80dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/brand_logo"
                android:layout_height="87dp"
                android:layout_marginStart="8dp"
                android:layout_below="@+id/cardView_image"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/cardView_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cardView_name"
                android:layout_below="@+id/cardView_name"
                android:maxLines="1"
                android:text="Dhanmondi, Dhaka"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/cardView_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="9dp"
                android:maxLines="1"
                android:text="Closed"
                android:textSize="25sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_dark"
                android:layout_below="@+id/cardView_location"
                android:layout_alignStart="@+id/cardView_location" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="#BDBDBD"
                android:layout_below="@+id/cardView_status" />

            <TextView
                android:id="@+id/cardView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Pizza Hut"
                android:textSize="25sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="14dp"
                android:layout_alignTop="@+id/cardView_heart1"
                android:layout_toEndOf="@+id/cardView_heart1" />

            <ImageView
                android:id="@+id/raters_icon"
                android:layout_width="30dp"

                android:src="@drawable/ic_person"
                android:layout_height="30dp"

                android:layout_marginStart="8dp"
                android:layout_alignBottom="@+id/cardView_raters"
                android:layout_toEndOf="@+id/cardView_raters" />

            <TextView
                android:id="@+id/cardView_raters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="7,809,666"
                android:textSize="22sp"
                android:textStyle="normal"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/circle1"
                android:layout_alignEnd="@+id/circle1" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="#BDBDBD"
                android:layout_below="@+id/cardView_raters" />

            <TextView
                android:id="@+id/address_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Housebuilding, beside North Tower, front of Rajuk College, 7th floor, middle of মামার বাড়ি"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/address_top"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/address_top" />

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="60dp"

                android:src="@drawable/ic_pin_drop_black"
                android:layout_height="60dp"

                android:layout_below="@+id/address_top"
                android:layout_alignStart="@+id/cardView_heart1" />

            <TextView
                android:id="@+id/address_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uttara, Dhaka, Bangladesh"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/address_middle"
                android:layout_alignStart="@+id/address_middle"
                android:layout_marginBottom="5dp"/>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="#BDBDBD"
                android:layout_below="@+id/address_bottom" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01727730582"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/divider3"
                android:layout_alignStart="@+id/address_bottom"
                android:layout_marginTop="11dp" />

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="30dp"
                android:src="@drawable/ic_perm_phone"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/phone"
                android:layout_alignStart="@+id/divider3" />

            <TextView
                android:id="@+id/address_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="House–177/B, Road–11"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/divider2"
                android:layout_toEndOf="@+id/cardView_heart1" />

            <TextView
                android:id="@+id/circle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="4.0★"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@drawable/circle_background_views"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_below="@+id/divider"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp" />

            <Button
                android:text="Visit Food Menu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:id="@+id/button"
                android:background="@drawable/rnd_gradiant_bg"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
